{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "gulp",
            "task": "build",
            "problemMatcher": [
                "$pester"
            ]
        },
        {
            "type": "gulp",
            "task": "watch",
            "problemMatcher": [
                "$pester"
            ]
        },
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        }
    ]
}