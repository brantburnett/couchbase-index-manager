{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "target": "es6",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "importHelpers": true
  },
  "include": [
    "./app/**/*"
  ],
  "exclude": [
    "./app/**/*.spec.ts",
    "./app/**/*.spec.js"
  ]
}
