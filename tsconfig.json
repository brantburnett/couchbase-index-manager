{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2018"],
    "outDir": "./dist",
    "sourceMap": true,
    "importHelpers": true,
    "declaration": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "include": [
    "./app/**/*"
  ],
  "exclude": [
    "./app/**/*.spec.ts",
    "./app/**/*.spec.js"
  ]
}
